<!-- res/drawable/half_circle_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base layer: Transparent circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000" /> <!-- Fully transparent -->
        </shape>
    </item>

    <!-- Smooth gradient from 10% opacity to fully transparent -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:useLevel="false"
                android:angle="135"
                android:centerX="0.68"
                android:centerY="0.68"
                android:centerColor="@android:color/transparent"
                android:startColor="@color/colorGradient"
            android:endColor="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
